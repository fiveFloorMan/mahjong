<div class="row mt-4">
  <div class="col-4 mx-auto">
    <div class="card">
      <div class="card-body">
        {{> message}}
        <form action="/admin/openGameReserve" method="POST" class="fs-4">
          {{!-- Open Date --}}
          <div class="mb-4">
            <label for="openGameDate" class="form-label">Open Game Date</label>
            <input type="Date" class="form-control" name="openGameDate" id="openGameDate" placeholder="Open Date" required>
          </div>
          {{!-- Game Name --}}
          <div class="mb-4">
            <label for="gameName" class="form-label">Enter Game Name</label>
            <input type="text" class="form-control" name="gameName" id="gameName" value='Game' placeholder="gameName" required>
          </div>
          <button type="submit" class="btn btn-warning col-12 my-3 fs-4">OPEN</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-4 mx-auto"><h4>OPEN GAME LIST</h4>
  <ul class="list-group fw-bold">
    <li class="row">
      <div class="list-group-item list-group-item-dark">
        <div class="row">
          <div class="col-7 text-center">Game Name / Participating Player</div>
          <div class="col-3 text-center">Date</div>
          <div class="col-2 text-center">Edit/DEL</div>
        </div>
      </div>
    </li>
  </ul>
    <ul class="list-group fw-bold">
      {{#each reserve}}
        <li class="row">
          <div class="list-group-item list-group-item-light">
            <div class="row">
              <div class="col-7 text-center">
                <div class="row">
                  <div class="col-12 text-center">{{this.gameName}}</div>
                  {{#each this.participatingPlayer}}
                  <div class="col-3 text-center">
                    {{this}}
                  </div>
                  {{/each}}
                </div>
              </div>
              <div class="col-3 text-center">{{this.date}}</div>
              <div class="col-2 text-center">Edit/DEL</div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>

</div>